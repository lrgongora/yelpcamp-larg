<%-include('../partials/header')-%>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-12">
<h1 class="text-center display-5 py-4">Update <%=campground.name%></h1>
</div>
<div  id="form-container" class="col-9 col-md-6 col-lg-4">
<form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
  <div class="form-group">
  <input class="form-control mb-3" type="text" placeholder="name" value="<%=campground.name%>"  name="campground[name]" required>
  <input class="form-control mb-3" type="text" placeholder="image src" value="<%=campground.image%>"  name="campground[image]" required>
  <label id="dollarSign" for="price">$ </label>
  <input class="form-control mb-3" type="number" min="0.01" step="0.01" placeholder="price" id="price" value="<%=campground.price%>" name="campground[price]" required>
  <input class="form-control mb-3" type="text" placeholder="description" value="<%=campground.description%>" name="campground[description]" required>
  <button class="btn btn-primary btn-md btn-block mb-3" type="submit">Update</button>
  </div>
</form>
<a href="/campgrounds/<%=campground._id%>">Go back!</a>
</div>
</div>
</div>

<%-include('../partials/footer')-%>

</body>
</html>